<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <com.simple.wallet.presentation.view.SquareImageView
        android:id="@+id/iv_background"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:rotation="-30"
        android:translationX="100dp"
        android:translationY="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="?android:attr/colorBackground" />

    <View
        android:id="@+id/v_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_chain"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_corners_16dp_stroke_1dp_on_background_tertiary"
        android:ellipsize="start"
        android:gravity="center"
        android:maxLength="10"
        android:paddingStart="32dp"
        android:paddingEnd="8dp"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintBottom_toBottomOf="@id/v_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_header" />

    <com.simple.wallet.presentation.view.shape.round.RoundedImageView
        android:id="@+id/iv_chain"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/img_all_network"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chain"
        app:layout_constraintStart_toStartOf="@+id/tv_chain"
        app:layout_constraintTop_toTopOf="@+id/tv_chain"
        app:radius="150dp" />

    <TextView
        android:id="@+id/tv_wallet"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_corners_16dp_stroke_1dp_on_background_tertiary"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="8dp"
        android:text="Wallet 2"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintBottom_toBottomOf="@id/tv_chain"
        app:layout_constraintStart_toEndOf="@id/tv_chain"
        app:layout_constraintTop_toTopOf="@id/tv_chain" />

    <com.simple.wallet.presentation.view.shape.round.RoundedImageView
        android:id="@+id/iv_wallet"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/img_all_network"
        app:layout_constraintBottom_toBottomOf="@+id/tv_wallet"
        app:layout_constraintStart_toStartOf="@+id/tv_wallet"
        app:layout_constraintTop_toTopOf="@+id/tv_wallet"
        app:radius="150dp" />

    <ImageView
        android:id="@+id/iv_scan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:padding="6dp"
        android:src="@drawable/ic_scan_on_background_24dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_chain"
        app:layout_constraintEnd_toStartOf="@id/iv_search"
        app:layout_constraintTop_toTopOf="@id/tv_chain" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_search_on_background_24dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_chain"
        app:layout_constraintEnd_toStartOf="@id/iv_add_wallet"
        app:layout_constraintTop_toTopOf="@id/tv_chain"  />

    <ImageView
        android:id="@+id/iv_add_wallet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_add_wallet_on_background_24dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_chain" />

    <com.simple.wallet.presentation.view.CustomSwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_header">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/walletAddress">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsingToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/frame_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:minHeight="195dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <EditText
                            android:id="@+id/edt_search"
                            style="?attr/textBody1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="16dp"
                            android:hint="Search text"
                            android:paddingHorizontal="16dp"
                            android:textColorHint="?attr/colorOnSurfaceVariant"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.simple.wallet.presentation.view.shape.round.RoundFrameLayout
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintBottom_toBottomOf="@id/tv_portfolio_value"
                            app:layout_constraintEnd_toEndOf="@id/tv_currency"
                            app:layout_constraintStart_toStartOf="@id/tv_portfolio_title"
                            app:layout_constraintTop_toTopOf="@id/tv_portfolio_value"
                            app:radius="16dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#000000" />

                            <com.simple.wallet.presentation.view.SquareImageView
                                android:id="@+id/iv_currency"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:layout_gravity="end"
                                android:alpha="0.2"
                                android:rotation="-30"
                                android:translationX="25dp"
                                android:translationY="-20dp"
                                app:layout_constraintBottom_toBottomOf="@id/tv_portfolio_value"
                                app:layout_constraintEnd_toEndOf="@id/tv_currency"
                                app:layout_constraintTop_toTopOf="@id/tv_portfolio_title" />
                        </com.simple.wallet.presentation.view.shape.round.RoundFrameLayout>

                        <TextView
                            android:id="@+id/tv_portfolio_title"
                            style="?attr/textBody1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:padding="16dp"
                            android:text="My Portfolio"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_portfolio_value" />

                        <TextView
                            android:id="@+id/tv_currency"
                            style="?attr/textBody1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:paddingEnd="16dp"
                            android:text="USD"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/tv_portfolio_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tv_portfolio_title" />

                        <TextView
                            android:id="@+id/tv_portfolio_value"
                            style="?attr/textHeadline4"
                            android:layout_width="wrap_content"
                            android:layout_height="170dp"
                            android:layout_marginStart="16dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:text="$1.000.000"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_portfolio_title" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:paddingHorizontal="12dp"
                            app:layout_constraintTop_toBottomOf="@id/tv_portfolio_value" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </com.simple.wallet.presentation.view.CustomSwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>