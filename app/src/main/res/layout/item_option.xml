<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp">

    <ImageView
        android:id="@+id/iv_option"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingVertical="8dp"
        android:paddingEnd="16dp"
        android:translationY="-8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_import_wallet_on_background_24dp" />

    <TextView
        android:id="@+id/tv_option_title"
        style="?attr/textBody1"
        android:layout_width="0dp"
        android:text="@string/app_name"
        android:textColor="?attr/colorOnBackground"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_option"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_option_caption"
        style="?attr/textCaption"
        android:layout_width="0dp"
        android:layout_marginTop="4dp"
        android:text="@string/app_name"
        android:textColor="?attr/colorOnBackgroundVariant"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@id/tv_option_title"
        app:layout_constraintStart_toStartOf="@id/tv_option_title"
        app:layout_constraintTop_toBottomOf="@id/tv_option_title" />
</androidx.constraintlayout.widget.ConstraintLayout>