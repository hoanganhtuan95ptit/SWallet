<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="43dp"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/iv_token"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="150dp"
        tools:src="@drawable/img_all_network" />

    <ImageView
        android:id="@+id/iv_chain"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/bg_corners_4dp_solid_background"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_token"
        app:layout_constraintEnd_toEndOf="@id/iv_token"
        app:radius="4dp"
        tools:src="@drawable/img_all_network" />

    <TextView
        android:id="@+id/tv_token"
        style="?attr/textBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:lines="1"
        android:maxLength="50"
        android:paddingEnd="22dp"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toEndOf="@id/iv_token"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry"
        tools:text="KNC" />

    <ImageView
        android:id="@+id/iv_tag"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_token"
        app:layout_constraintEnd_toEndOf="@id/tv_token"
        app:layout_constraintTop_toTopOf="@id/tv_token"
        app:radius="150dp"
        tools:src="@drawable/img_all_network" />

    <TextView
        android:id="@+id/tv_price"
        style="?attr/textBody2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lines="1"
        android:maxLength="50"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_value"
        app:layout_constraintStart_toStartOf="@id/tv_token"
        app:layout_constraintTop_toBottomOf="@+id/tv_token"
        tools:text="7,809.4580" />

    <TextView
        android:id="@+id/tv_balance"
        style="?attr/textBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="50"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="KNC" />

    <TextView
        android:id="@+id/tv_value"
        style="?attr/textBody2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:lines="1"
        android:maxLength="50"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="@id/tv_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_price"
        tools:text="7,809.4580" />
</androidx.constraintlayout.widget.ConstraintLayout>

