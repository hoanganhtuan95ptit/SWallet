<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_wallet_name"
        style="?attr/textBody2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnBackgroundVariant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <com.simple.wallet.presentation.view.shape.round.RoundedImageView
        android:id="@+id/iv_wallet"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/img_all_network"
        app:layout_constraintStart_toStartOf="@id/tv_wallet_name"
        app:layout_constraintTop_toBottomOf="@id/tv_wallet_name"
        app:radius="150dp" />

    <TextView
        android:id="@+id/tv_wallet_address"
        style="?attr/textBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="marquee"
        android:lines="1"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintBottom_toBottomOf="@id/iv_wallet"
        app:layout_constraintStart_toEndOf="@id/iv_wallet"
        app:layout_constraintTop_toTopOf="@id/iv_wallet"
        tools:text="@string/app_name" />

    <View
        android:id="@+id/v_wallet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_wallet_address"
        app:layout_constraintStart_toStartOf="@id/iv_wallet"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_chain_title"
        style="?attr/textBody2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnBackgroundVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />

    <com.simple.wallet.presentation.view.shape.round.RoundedImageView
        android:id="@+id/iv_chain"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/img_all_network"
        app:layout_constraintEnd_toStartOf="@id/tv_chain_name"
        app:layout_constraintTop_toBottomOf="@id/tv_chain_title"
        app:radius="150dp" />

    <TextView
        android:id="@+id/tv_chain_name"
        style="?attr/textBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintBottom_toBottomOf="@id/iv_chain"
        app:layout_constraintEnd_toEndOf="@id/tv_chain_title"
        app:layout_constraintTop_toTopOf="@id/iv_chain"
        tools:text="@string/app_name" />

    <View
        android:id="@+id/v_chain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_chain_title"
        app:layout_constraintStart_toStartOf="@id/iv_chain"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>